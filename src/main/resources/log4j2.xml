<?xml version="1.0" encoding="utf-8"?>
<Configuration>

    <Properties>
        <Property name="logdir">${env:HOME}/dev-logs/quizzard</Property>
        <Property name="layout">%d [%t] %-5level %logger{36} - %msg%n%throwable</Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n"/>
        </Console>
        <File name="FileAppender" fileName="${logdir}/app.log">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="FileLogger" level="DEBUG">
            <AppenderRef ref="FileAppender"/>
        </Logger>
        <Root level="DEBUG">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>